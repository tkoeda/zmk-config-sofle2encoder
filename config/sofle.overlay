/ {
    sensors {
        left_config: left_config {
            compatible = "zmk,rotary-encoder";
            triggers-per-rotation = <30>;
        };

        right_config: right_config {
            compatible = "zmk,rotary-encoder";
            triggers-per-rotation = <30>;
        };
    };
};

/* Bind your new sensor configs to the real encoder nodes */
&left_encoder {
    sensor = <&left_config>;
};

&right_encoder {
    sensor = <&right_config>;
};
