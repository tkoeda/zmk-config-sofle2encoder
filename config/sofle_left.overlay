/* config/sofle_left.overlay */
/ { // Ensures we are defining this at the root level of the DTS

    left_encoder: left_encoder { // Defines a node with the label "left_encoder"
        compatible = "alps,ec11";
        label = "LEFT_ENCODER";   /* This is the label for ZMK's sensor subsystem */

        /* IMPORTANT: You MUST verify these GPIO pin assignments for your specific Sofle PCB version! */
        /* The pins below (Pro Micro D2 and D3) are common for some Sofle versions but can vary. */
        /* Consult your PCB's documentation or schematic. */
        a-gpios = <&pro_micro 2 (GPIO_PULL_UP | GPIO_ACTIVE_HIGH)>; /* Example: Pro Micro D2 pin */
        b-gpios = <&pro_micro 3 (GPIO_PULL_UP | GPIO_ACTIVE_HIGH)>; /* Example: Pro Micro D3 pin */

        // resolution = <2>; /* Optional: ZMK defaults to 2 (pulses per detent).
                            //  Set to 1 or 4 if your encoder is different.
                            //  This is NOT the same as triggers-per-rotation. */
        status = "okay";
        triggers-per-rotation = <30>;
    };
};
