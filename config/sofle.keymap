#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>

// Encoders

&sensors { triggers-per-rotation = <30>; };

&left_encoder { steps = <60>; };

&right_encoder { steps = <60>; };

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {
    // Activate ADJUST layer by pressing raise and lower

    conditional_layers {
        compatible = "zmk,conditional-layers";

        SYSTEM_MAC {
            if-layers = <2 3>;
            then-layer = <5>;
        };

        SYSTEM_WIN {
            if-layers = <2 4>;
            then-layer = <3>;
        };
    };

    combos { compatible = "zmk,combos"; };

    behaviors {
        caps: caps {
            compatible = "zmk,behavior-caps-word";
            label = "CAPS";
            #binding-cells = <0>;
            continue-list = <POUND MINUS BACKSPACE UNDERSCORE>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        BASE_MAC {
            display-name = "BASE_MAC";

            // ------------------------------------------------------------------------------------------------------------
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |       |
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BKSPC |
            // |  TAB  |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //               | GUI | ALT  | CTRL | LOWER|  ENTER |  | SPACE | RAISE| CTRL  | ALT   | GUI  |

            bindings = <
&kp ESC         &kp N1  &kp N2  &kp N3            &kp N4        &kp N5                                                &kp N6  &kp N7             &kp N8             &kp N9   &kp N0         &kp DELETE
&kp TAB         &kp Q   &kp W   &kp F             &kp P         &kp B                                                 &kp J   &kp L              &kp U              &kp Y    &kp SEMICOLON  &kp BSPC
&kp LEFT_SHIFT  &kp A   &kp R   &kp S             &kp T         &kp G                                                 &kp M   &kp N              &kp E              &kp I    &kp O          &kp SQT
&kp LEFT_ALT    &kp Z   &kp X   &kp C             &kp D         &kp V   &kp LS(LC(LG(UP_ARROW)))    &kp LG(NUMBER_0)  &kp K   &kp H              &kp COMMA          &kp DOT  &kp FSLH       &kp RSHFT
                        &to 1   &kp LEFT_CONTROL  &kp LEFT_GUI  &mo 3   &kp SPACE                   &lt 6 ENTER       &mo 2   &kp RIGHT_COMMAND  &kp RIGHT_CONTROL  &to 1
            >;

            sensor-bindings =
                <&inc_dec_kp LC(LS(RIGHT)) LC(LS(LEFT))>,
                <&inc_dec_kp LG(MINUS) LG(PLUS)>;
        };

        BASE_WIN {
            display-name = "BASE_WIN";
            bindings = <
&kp ESC         &kp N1  &kp N2  &kp N3            &kp N4            &kp N5                                  &kp N6  &kp N7             &kp N8         &kp N9   &kp N0         &kp DELETE
&kp TAB         &kp Q   &kp W   &kp F             &kp P             &kp B                                   &kp J   &kp L              &kp U          &kp Y    &kp SEMICOLON  &kp BSPC
&kp LEFT_SHIFT  &kp A   &kp R   &kp S             &kp T             &kp G                                   &kp M   &kp N              &kp E          &kp I    &kp O          &kp SQT
&kp LEFT_ALT    &kp Z   &kp X   &kp C             &kp D             &kp V   &kp K_MUTE    &kp LG(NUMBER_0)  &kp K   &kp H              &kp COMMA      &kp DOT  &kp FSLH       &kp RSHFT
                        &to 0   &kp LEFT_COMMAND  &kp LEFT_CONTROL  &mo 4   &kp SPACE     &lt 6 ENTER       &mo 2   &kp RIGHT_CONTROL  &kp RIGHT_GUI  &to 0
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOLUME_UP C_VOL_DN>,
                <&inc_dec_kp C_AC_ZOOM_IN C_AC_ZOOM_OUT>;
        };

        SYMBOL {
            display-name = "SYMBOL";

            // TODO: Some binds are waiting for shifted keycode support.
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |  F12  |
            // |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
            // |       |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
            //               |     |      |      |      |        |  |       |      |       |       |      |

            bindings = <
&kp F1  &kp F2     &kp F3         &kp F4            &kp F5             &kp F6                           &kp F7         &kp F8         &kp F9                &kp F10                &kp F11       &kp F12
&trans  &kp GRAVE  &kp LESS_THAN  &kp GREATER_THAN  &kp DOUBLE_QUOTES  &kp SQT                          &kp AMPERSAND  &kp SEMICOLON  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp PERCENT   &trans
&trans  &kp EXCL   &kp MINUS      &kp PLUS          &kp EQUAL          &kp HASH                         &kp PIPE       &kp COLON      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp QUESTION  &trans
&trans  &kp CARET  &kp SLASH      &kp ASTERISK      &kp UNDERSCORE     &kp BACKSLASH  &trans    &trans  &kp TILDE      &kp DOLLAR     &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp AT_SIGN   &trans
                   &trans         &trans            &trans             &trans         &trans    &trans  &trans         &trans         &trans                &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LEFT_ARROW RIGHT_ARROW>,
                <&inc_dec_kp UP_ARROW DOWN_ARROW>;
        };

        NAV_MAC {
            display-name = "NAV_MAC";

            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
            // |       | INS  | PSCR | GUI   |       |      |                | PGUP |      |   ^   |      |       |       |
            // |       | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |       | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
            //                |      |       |       |      |      |  |      |      |      |       |      |

            bindings = <
&trans  &trans             &trans     &trans      &trans    &trans                        &trans  &trans         &trans        &trans         &trans                &trans
&trans  &trans             &trans     &trans      &trans    &trans                        &trans  &kp LG(SPACE)  &trans        &trans         &trans                &trans
&trans  &kp C_VOLUME_UP    &kp LEFT   &kp RIGHT   &kp UP    &kp CLCK                      &trans  &kp LG(UP)     &kp LG(LEFT)  &kp LG(RIGHT)  &kp C_BRIGHTNESS_INC  &trans
&trans  &kp C_VOLUME_DOWN  &kp K_CUT  &kp K_COPY  &kp DOWN  &kp K_MUTE  &trans    &trans  &trans  &kp LG(DOWN)   &trans        &trans         &kp C_BRIGHTNESS_DEC  &trans
                           &trans     &trans      &trans    &trans      &trans    &trans  &trans  &trans         &trans        &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LA(LG(RIGHT)) LA(LG(LEFT))>,
                <&inc_dec_kp PG_UP PG_DN>;
        };

        NAV_WIN {
            display-name = "NAV_WIN";
            bindings = <
&kp F1  &kp F2             &kp F3     &kp F4      &kp F5    &kp F6                                  &kp F7  &kp F8        &kp F9        &kp F10        &kp F11               &kp F12
&trans  &kp LA(F4)         &trans     &trans      &trans    &trans                                  &trans  &trans        &trans        &trans         &trans                &trans
&trans  &kp C_VOLUME_UP    &kp LEFT   &kp RIGHT   &kp UP    &kp CLCK                                &trans  &kp LC(UP)    &kp LC(LEFT)  &kp LC(RIGHT)  &kp C_BRIGHTNESS_INC  &trans
&trans  &kp C_VOLUME_DOWN  &kp K_CUT  &kp K_COPY  &kp DOWN  &kp K_MUTE  &kp LG(UP_ARROW)    &trans  &trans  &kp LC(DOWN)  &trans        &trans         &kp C_BRIGHTNESS_DEC  &trans
                           &trans     &trans      &trans    &trans      &trans              &trans  &trans  &trans        &trans        &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LG(RIGHT) LG(LEFT)>,
                <&inc_dec_kp PG_UP PG_DN>;
        };

        SYSTEM {
            // ----------------------------------------------------------------------------------------------------------------------------
            // | BTCLR  |  BT1    |  BT2    |   BT3   |   BT4   |   BT5   |                  |      |      |       |      |       |       |
            // | EXTPWR | RGB_HUD | RGB_HUI | RGB_SAD | RGB_SAI | RGB_EFF |                  |      |      |       |      |       |       |
            // |        | RGB_BRD | RGB_BRI |         |         |         |                  |      |      |       |      |       |       |
            // |        |         |         |         |         |         | RGB_TOG | |      |      |      |       |      |       |       |
            //                    |         |         |         |         |         | |      |      |      |       |      |

            display-name = "SYSTEM";
            bindings = <
&bt BT_CLR_ALL     &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &none  &none  &none  &none  &none  &none
&ext_power EP_TOG  &none         &none         &none         &none         &studio_unlock                  &none  &none  &none  &none  &none  &none
&none              &none         &none         &none         &none         &none                           &none  &none  &none  &none  &none  &none
&none              &none         &none         &none         &none         &caps_word      &none    &none  &none  &none  &none  &none  &none  &none
                                 &none         &none         &none         &none           &none    &none  &none  &none  &none  &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        NUM {
            bindings = <
&trans  &trans  &trans  &trans     &trans   &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans     &trans   &trans                    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp N1  &kp N2  &kp N3     &kp N4   &kp N5                    &kp N6  &kp N7  &kp N8  &kp N9  &kp N0  &kp RET
&trans  &trans  &trans  &kp COMMA  &kp DOT  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
                &trans  &trans     &trans   &trans  &trans    &trans  &trans  &trans  &trans  &trans
            >;
        };
    };
};
